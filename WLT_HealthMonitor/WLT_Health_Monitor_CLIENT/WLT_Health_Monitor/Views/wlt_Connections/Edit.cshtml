@model WLT_HealthMonitor.Models.wlt_Connections

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-5">
        <h2>Edit</h2>

        <h4> Server Connections</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="conn_ID" />
            <div class="form-group">
                <label asp-for="Connection" class="control-label"></label>
                <input asp-for="Connection" class="form-control" />
                <span asp-validation-for="Connection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Host" class="control-label"></label>
                <input asp-for="Host" class="form-control" />
                <span asp-validation-for="Host" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>

        <div style="padding:10px;padding-left:0">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
