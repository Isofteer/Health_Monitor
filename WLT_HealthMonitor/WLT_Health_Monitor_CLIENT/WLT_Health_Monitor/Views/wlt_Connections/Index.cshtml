@model IEnumerable<WLT_HealthMonitor.Models.wlt_Connections>

@{
    ViewData["Title"] = "Index";
}

<h2>Servers and Connection</h2>

<p>
    <a class="  btn waves-effect " asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Host)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Connection)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Host)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Connection)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.conn_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.conn_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.conn_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
