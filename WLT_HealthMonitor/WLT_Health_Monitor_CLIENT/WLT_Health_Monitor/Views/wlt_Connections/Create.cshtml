@model WLT_HealthMonitor.Models.wlt_Connections

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-5">

        <h2>Create</h2>

        <h4> new Connections</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

